<%
	var security = data.security ||{};
%>
<div class="detail-page f14">
	<!--详情页面标识-->
	<!--置顶在detail-tab-wrap添加class fixed-detail-tab-wrap-->
	<div class="detail-tab-wrap" id="detialTab">
		<div class="layout">
			<div class="hz-breadcrumb pt10 pb30">
				<a href="/">慧择保险网</a>
				<i class="arrow-right">&gt;</i>
				<a href="/product/ins-<%= security.parentCategoryId%>-0-0"><%= security.parentCategoryName%></a>
				<i class="arrow-right">&gt;</i>
				<a href="/product/ins-<%= security.categoryId%>-0-0"><%= security.categoryName%></a>
				<i class="arrow-right">&gt;</i>
				<a href="/brand/detail/<%= security.companyId%>"><%= security.companySimpleName%></a>
				<i class="arrow-right">&gt;</i>
				<h1 class="hz-breadcrumb-active"><%= security.productName + " " + ((security.planList || []).find(function(item){return item.planId == security.planId}) || {}).planName || ""%></h1>
			</div>
			<!--hz-breadcrumb end-->
			<div class="detail-hz-tab-box">
				<ul class="hz-tab-menu hz-tab-style01 detail-tab-menu" id="detailTabs">
					<li class="hz-tab-menu-item active" data-tab="detial-1"><a href="javascript:;">保障详情</a></li>
					<% if(data.analysis.replace(/\s+/g,"")){%>
						<li class="hz-tab-menu-item" data-tab="detial-2">
                            <a href="javascript:;">产品解读<i class="hz-bgpic-sprite hz-bgpic-9"></i></a>
                        </li>
					<%}%>
					<li class="hz-tab-menu-item" data-tab="detial-3"><a href="javascript:;">典型案例</a></li>
					<li class="hz-tab-menu-item" data-tab="detial-4"><a href="javascript:;">理赔指引</a></li>
					<li class="hz-tab-menu-item" data-tab="detial-5"><a href="javascript:;">常见问题</a></li>
					<li class="hz-tab-menu-item" data-tab="detial-6"><a href="javascript:;">用户评论(<span class="primary-color"><%=(data.comments.data[0].total)%></span>)</a></li>
				</ul>
				<ul class="detail-tab-others clearfix">
					<li class="comparer-item fl"><div class="hz-check-item inline-block" id="addToCompare">
						<i class="hz-check-icon"></i><span class="hz-check-text">加入对比</span>
					</div></li>
					<li class="favorite-item fl ml25" id="favorite"><a href="javascript:;"><i class="iconfont mr5 f20">&#xe741;</i><span>收藏</span></a></li>
					<li class="share-item fl ml25">
						<a href="javascript:;" id="sharePanelBtn" data-prompt-html="" data-prompt-position="bottom" class="primary-link"><i class="iconfont mr5 f18">&#xe705;</i>分享</a>
					</li>
				</ul>
			</div>
		</div>
		<!--layout end-->
	</div>
	<!---detail-tab-wrap end-->
	<div id="detaTabLayout" class="layout clearfix pt30 pb30">
		<div class="detail-primary">
			<div class="detail-tab-container" id="detialTabContent">
				<div class="detail-pane hidden show" data-tab="detial-1">
					<% include _detial %>

                    <% include _recommend %>
                    <!--recommended-products-->
				</div>
				<% if(data.analysis.replace(/\s+/g,"")){%>
					<div class="detail-pane hidden" data-tab="detial-2">
						<% include _reading %>
					</div>
				<%}%>
				<div class="detail-pane hidden" data-tab="detial-3">
                    <% include _typical-cases %>
				</div>
				<div class="detail-pane hidden" data-tab="detial-4">
					 <% include _claims-guidelines %>
				</div>
				<div class="detail-pane hidden" data-tab="detial-5">
					 <% include _faq %>
				</div>
				<div class="detail-pane hidden" data-tab="detial-6">
					<% showComments = 10;%>
					<% include _review %>
				</div>

			<!--detail-pane end-->

            </div>
            <!--detail-tab-container end-->
	</div>
	<!--detail-primary-->
	<!--置顶class fixed-sidebar如 class="detail-sidebar fixed-sidebar" -->
	<% include _sidebar %>
	<!--detail-sidebar end-->
</div>
<!--layout end-->
</div>
