<%
var
    paymentGiveInfo = data.paymentGiveInfos || [],
    beanGiveAmount = 0,
    redEnvelopeGiveInfo = [],
    growthValue = 0,
    firstProduct = data.insuranceInfos[0] || {},
    fistProductName = (firstProduct.insureCompanyName || "" ) + (firstProduct.productPlatformName || "") + (firstProduct.planPlatformName || ""),
    needPaper1 = false,
    needPaper2 = false,
    needPaperType = 1;//1电子保单，2纸质保单，3既有纸质保单又有电子保单
(data.insuranceInfos || []).forEach(function(item){
   if(!needPaper2 && item.needPaper){
       needPaper2 = true;
   }
   else if(!needPaper1 && !item.needPaper){
       needPaper1 = true;
   }
});
needPaperType = needPaper1 && needPaper2 ? 3 : (!needPaper1 && needPaper2 ? 2 : 1);
paymentGiveInfo.forEach(function(item){
    if(item.currencyId === 1003){
        beanGiveAmount += item.amount;
    }
    else if(item.currencyId == -127){
        growthValue += item.amount;
    }
    else if(item.currencyId === 1001){
        redEnvelopeGiveInfo.push(item);
    }
});
%>
